<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<p> 
  <%= link_to new_genre_path  do %>
  <i class="glyphicon glyphicon-plus"> New Genre</i>
  <% end %>
</p>

<div class="row">
    <% @genres.each do |genre| %>
    <div class="col-md-6">
      <div class="well">
      
        <h2><%= link_to genre.name, genre%></h2>

        <p>

        <h2><%= link_to edit_genre_path(genre) do %></h2>
        <i class="glyphicon glyphicon-pencil"></i>
        <% end %>

        <%= link_to genre, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="glyphicon glyphicon-trash"> </i>
        <% end %>

        </p>

      </div>
    </div>

    <% end %>
</div>

<br>


